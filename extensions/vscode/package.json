{
  "name": "luanext",
  "displayName": "LuaNext",
  "description": "Language support for LuaNext - a statically typed dialect of Lua",
  "version": "0.1.0",
  "publisher": "luanext",
  "license": "MIT",
  "icon": "assets/luanext-icon-128.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/luanext"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "lua",
    "luanext",
    "type checking",
    "language server"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "luanext",
        "aliases": [
          "LuaNext",
          "luanext"
        ],
        "extensions": [
          ".luax"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "luanext",
        "scopeName": "source.luanext",
        "path": "./syntaxes/luanext.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "LuaNext",
      "properties": {
        "luanext.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the LuaNext language server."
        },
        "luanext.server.path": {
          "type": "string",
          "default": "luanext-lsp",
          "description": "Path to the LuaNext language server executable. If not set, will try to find 'luanext-lsp' in PATH."
        },
        "luanext.compiler.checkOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run type checking when saving files."
        },
        "luanext.compiler.strictNullChecks": {
          "type": "boolean",
          "default": true,
          "description": "Enable strict null checking."
        },
        "luanext.format.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable code formatting."
        },
        "luanext.format.indentSize": {
          "type": "number",
          "default": 4,
          "description": "Number of spaces for indentation."
        },
        "luanext.inlayHints.typeHints": {
          "type": "boolean",
          "default": true,
          "description": "Show inlay hints for inferred types."
        },
        "luanext.inlayHints.parameterHints": {
          "type": "boolean",
          "default": true,
          "description": "Show inlay hints for parameter names."
        }
      }
    },
    "commands": [
      {
        "command": "luanext.restartServer",
        "title": "LuaNext: Restart Language Server"
      },
      {
        "command": "luanext.showOutputChannel",
        "title": "LuaNext: Show Output Channel"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/vsce": "^2.22.0"
  }
}
